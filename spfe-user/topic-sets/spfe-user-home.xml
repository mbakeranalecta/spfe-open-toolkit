<?xml-stylesheet type="text/css" href="../../spfe-docs/topic-types/common/authoring/css/spfe-docs.css" title="spfe-docs-css" alternate="no"?>
<spfe xmlns="http://spfeopentoolkit/ns/spfe-ot/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://spfeopentoolkit/ns/spfe-ot/config http://spfeopentoolkit.org/spfe-ot/1.0/schemas/config/spfe-config.xsd">

    <topic-set>
        <topic-set-id>spfe-user-home</topic-set-id>
        <topic-set-type>home</topic-set-type>
        <topic-types>

            <topic-type>         
                <name>{http://spfeopentoolkit.org/ns/spfe-docs}docset-home-topic</name>
                <href>../../spfe-docs/topic-types/docset-home-topic/config.xml</href>
            </topic-type>

        </topic-types>
        <presentation-types>
            <presentation-type>
                <name>eppo</name>
            </presentation-type>
        </presentation-types>        
        <output-formats>
            <output-format>
                <name>html</name>
            </output-format>
        </output-formats>
        

        <sources>
            <authored-content>
                <include>../content/text/home/*.xml</include>
                <include>../content/text/reference/*.xml</include>
            </authored-content>
        </sources>

        <default-topic-scope>spfe</default-topic-scope>
        <default-subject-scope>spfe</default-subject-scope>
        <build-rules>${SPFEOT_HOME}/1.0/build-tools/spfe-rules.xml</build-rules>

        <strings>
            <string id="eppo-simple-topic-set-title">Using SPFE Open Toolkit</string>
        </strings>
    </topic-set>
</spfe>
